@model List<BooksArchivingSystem.Controllers.UserRoleDto>

@{
    ViewData["Title"] = "User Roles Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="bi bi-people-fill me-2"></i>User Roles Management
    </h2>
</div>

<div class="card shadow">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">
            <i class="bi bi-gear me-2"></i>Manage User Roles
        </h5>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="bi bi-person me-1"></i>User</th>
                            <th><i class="bi bi-envelope me-1"></i>Email</th>
                            <th><i class="bi bi-shield me-1"></i>Current Role</th>
                            <th><i class="bi bi-gear-fill me-1"></i>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-person-circle me-2 text-muted"></i>
                                        <span>@user.FirstName @user.LastName</span>
                                    </div>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    @if (user.Roles.Any())
                                    {
                                        foreach (var role in user.Roles)
                                        {
                                            <span class="badge bg-@(role == "Admin" ? "danger" : role == "Librarian" ? "warning" : "secondary") me-1">
                                                @role
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-dark">No Role</span>
                                    }
                                </td>
                                <td>
                                    <form asp-action="AssignRole" method="post" class="d-inline">
                                        <input type="hidden" name="userId" value="@user.UserId" />
                                        <div class="input-group input-group-sm" style="width: 200px;">
                                            <select name="role" class="form-select form-select-sm">
                                                @foreach (var role in ViewBag.AllRoles)
                                                {
                                                    <option value="@role" selected="@(user.Roles.Contains(role))">@role</option>
                                                }
                                            </select>
                                            <button type="submit" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-check"></i>
                                            </button>
                                        </div>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>No users found.
            </div>
        }
    </div>
</div>

<div class="mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-shield-fill-exclamation text-danger" style="font-size: 2rem;"></i>
                    <h6 class="card-title mt-2">Admin</h6>
                    <p class="card-text small">Full system access and user management</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-book-half text-warning" style="font-size: 2rem;"></i>
                    <h6 class="card-title mt-2">Librarian</h6>
                    <p class="card-text small">Can add, edit, and delete books</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="bi bi-person text-secondary" style="font-size: 2rem;"></i>
                    <h6 class="card-title mt-2">User</h6>
                    <p class="card-text small">Can view and browse books</p>
                </div>
            </div>
        </div>
    </div>
</div>

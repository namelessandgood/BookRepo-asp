<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Books Archiving System</title>    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BooksArchivingSystem.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>    <header>
        <nav class="navbar navbar-expand-lg shadow-sm" style="background: var(--primary-gradient);">
            <div class="container-fluid px-4">
                <a class="navbar-brand fw-bold text-white" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-book-fill me-2"></i>Books Archive
                </a>
                <button class="navbar-toggler border-0 text-white" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door me-1"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Books" asp-action="Index">
                                <i class="bi bi-book me-1"></i>Books
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Authors" asp-action="Index">
                                <i class="bi bi-people me-1"></i>Authors
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Categories" asp-action="Index">
                                <i class="bi bi-tags me-1"></i>Categories
                            </a>
                        </li>                        @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="adminDropdown" role="button" 
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear me-1"></i>Manage
                                </a>
                                <ul class="dropdown-menu shadow-lg border-0 rounded-3">
                                    <li><a class="dropdown-item" asp-controller="Books" asp-action="Create">
                                        <i class="bi bi-plus-circle me-2 text-primary"></i>Add Book
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Authors" asp-action="Create">
                                        <i class="bi bi-person-plus me-2 text-primary"></i>Add Author
                                    </a></li>
                                    <li><a class="dropdown-item" asp-controller="Categories" asp-action="Create">
                                        <i class="bi bi-tag-fill me-2 text-primary"></i>Add Category
                                    </a></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Roles">
                                            <i class="bi bi-people me-2 text-primary"></i>User Roles
                                        </a></li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" id="userDropdown" role="button" 
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle me-1"></i>@User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 rounded-3">
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right me-2 text-danger"></i>Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus me-1"></i>Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>      <div class="container-fluid px-4 flex-grow-1">
        <main role="main" class="py-4">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mb-4 rounded-3 border-0" role="alert" style="background: var(--success-gradient); color: white;">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-4 rounded-3 border-0" role="alert" style="background: var(--danger-gradient); color: white;">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>    <footer class="mt-auto" style="background: var(--gray-800);">
        <div class="container-fluid px-4">
            <div class="row py-4">
                <div class="col-md-6">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-book-fill me-2 text-white"></i>
                        <span class="text-white">&copy; 2025 - Books Archiving System</span>
                    </div>
                    <p class="text-white-50 small mb-0 mt-1">
                        Modern digital library management solution
                    </p>
                </div>
                <div class="col-md-6 text-end">
                    <div class="d-flex justify-content-end gap-4">
                        <a href="#" class="text-white text-decoration-none hover-link">
                            <i class="bi bi-shield-check me-1"></i>Privacy Policy
                        </a>
                        <a href="#" class="text-white text-decoration-none hover-link">
                            <i class="bi bi-info-circle me-1"></i>About
                        </a>
                        <a href="#" class="text-white text-decoration-none hover-link">
                            <i class="bi bi-question-circle me-1"></i>Support
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

@model BooksArchivingSystem.Business.DTOs.CategoryDto

@{
    ViewData["Title"] = "Delete Category";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>Delete Category
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this category? This action cannot be undone.
                </div>

                <div class="mb-3">
                    <h5>@Model.Name</h5>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <p>@Model.Description</p>
                    }
                </div>

                <div class="small text-muted">
                    <strong>Created:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                </div>
            </div>
            <div class="card-footer">
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Back to List
                        </a>
                        <div>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info me-2">
                                <i class="bi bi-eye me-1"></i>Details
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Delete Category
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

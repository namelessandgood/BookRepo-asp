@model IEnumerable<BooksArchivingSystem.Business.DTOs.CategoryDto>

@{
    ViewData["Title"] = "Categories";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="bi bi-tags-fill me-2"></i>Categories
    </h2>
    @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
    {
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-2"></i>Add New Category
        </a>
    }
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model.Any())
{
    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm category-card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-action="Details" asp-route-id="@category.Id" 
                               class="text-decoration-none text-dark">
                                <i class="bi bi-tag me-2"></i>@category.Name
                            </a>
                        </h5>
                        
                        @if (!string.IsNullOrEmpty(category.Description))
                        {
                            <p class="card-text">
                                @category.Description
                            </p>
                        }
                        
                        <div class="small text-muted">
                            <i class="bi bi-calendar me-1"></i>
                            Created: @category.CreatedAt.ToString("MMM dd, yyyy")
                        </div>
                    </div>
                    
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@category.Id" 
                               class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye me-1"></i>Details
                            </a>
                            
                            @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
                            {
                                <a asp-action="Edit" asp-route-id="@category.Id" 
                                   class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-pencil me-1"></i>Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@category.Id" 
                                   class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash me-1"></i>Delete
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle me-2"></i>
        <span>No categories available.</span>
        @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
        {
            <br>
            <a asp-action="Create" class="btn btn-success btn-sm mt-2">
                <i class="bi bi-plus-circle me-1"></i>Add the first category
            </a>
        }
    </div>
}

@section Styles {
    <style>
        .category-card:hover {
            transform: translateY(-2px);
            transition: transform 0.2s ease-in-out;
        }
        
        .card-title a:hover {
            color: var(--bs-primary) !important;
        }
    </style>
}

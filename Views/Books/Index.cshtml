@model IEnumerable<BooksArchivingSystem.Business.DTOs.BookDto>

@{
    ViewData["Title"] = "Books";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="bi bi-book-fill me-2"></i>Books Collection
    </h2>
    @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
    {
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-2"></i>Add New Book
        </a>
    }
</div>

<!-- Search and Filter Section -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" asp-action="Index">
            <div class="row">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" name="searchTerm" value="@ViewBag.SearchTerm" 
                               class="form-control" placeholder="Search by title, author, publisher, or ISBN...">
                    </div>
                </div>
                <div class="col-md-4">
                    <select name="categoryId" class="form-select">
                        <option value="0">All Categories</option>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.Id" selected="@(ViewBag.CategoryId == category.Id)">
                                @category.Name
                            </option>
                        }
                    </select>
                </div>                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100" id="filterBtn">
                        <span class="btn-text">
                            <i class="bi bi-funnel me-1"></i>Filter
                        </span>
                        <span class="btn-loading d-none">
                            <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                            Filtering...
                        </span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Books Grid -->
@if (Model.Any())
{
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm book-card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a asp-action="Details" asp-route-id="@book.Id" 
                               class="text-decoration-none text-dark">
                                @book.Title
                            </a>
                        </h5>
                        
                        @if (book.Authors.Any())
                        {
                            <p class="card-text text-muted mb-2">
                                <i class="bi bi-person me-1"></i>
                                <small>by @string.Join(", ", book.Authors.Select(a => a.Name))</small>
                            </p>
                        }
                        
                        @if (!string.IsNullOrEmpty(book.Description))
                        {
                            <p class="card-text">
                                @(book.Description.Length > 100 ? book.Description.Substring(0, 100) + "..." : book.Description)
                            </p>
                        }
                        
                        <div class="row small text-muted mb-2">
                            @if (!string.IsNullOrEmpty(book.Publisher))
                            {
                                <div class="col-12">
                                    <i class="bi bi-building me-1"></i>@book.Publisher
                                </div>
                            }
                            @if (book.PublicationDate.HasValue)
                            {
                                <div class="col-6">
                                    <i class="bi bi-calendar me-1"></i>@book.PublicationDate.Value.Year
                                </div>
                            }
                            @if (book.Pages > 0)
                            {
                                <div class="col-6">
                                    <i class="bi bi-file-text me-1"></i>@book.Pages pages
                                </div>
                            }
                        </div>
                        
                        @if (!string.IsNullOrEmpty(book.CategoryName))
                        {
                            <span class="badge bg-secondary mb-2">@book.CategoryName</span>
                        }
                        
                        @if (!string.IsNullOrEmpty(book.ISBN))
                        {
                            <div class="small text-muted">
                                <strong>ISBN:</strong> @book.ISBN
                            </div>
                        }
                    </div>
                    
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Details" asp-route-id="@book.Id" 
                               class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye me-1"></i>Details
                            </a>
                            
                            @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
                            {
                                <a asp-action="Edit" asp-route-id="@book.Id" 
                                   class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-pencil me-1"></i>Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@book.Id" 
                                   class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash me-1"></i>Delete
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info text-center">
        <i class="bi bi-info-circle me-2"></i>
        @if (!string.IsNullOrEmpty(ViewBag.SearchTerm) || ViewBag.CategoryId > 0)
        {
            <span>No books found matching your search criteria.</span>
            <br>
            <a asp-action="Index" class="btn btn-outline-primary btn-sm mt-2">
                <i class="bi bi-arrow-clockwise me-1"></i>Clear Filters
            </a>
        }
        else
        {
            <span>No books available in the collection.</span>
            @if (User.IsInRole("Admin") || User.IsInRole("Librarian"))
            {
                <br>
                <a asp-action="Create" class="btn btn-success btn-sm mt-2">
                    <i class="bi bi-plus-circle me-1"></i>Add the first book
                </a>
            }
        }
    </div>
}

@section Styles {
    <style>
        .book-card:hover {
            transform: translateY(-2px);
            transition: transform 0.2s ease-in-out;
        }
        
        .card-title a:hover {
            color: var(--bs-primary) !important;
        }
        
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(255, 255, 255, 0.8);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const filterBtn = document.getElementById('filterBtn');
            const form = document.querySelector('form');
            
            if (form && filterBtn) {
                form.addEventListener('submit', function() {
                    const btnText = filterBtn.querySelector('.btn-text');
                    const btnLoading = filterBtn.querySelector('.btn-loading');
                    
                    btnText.classList.add('d-none');
                    btnLoading.classList.remove('d-none');
                    filterBtn.disabled = true;
                });
            }
        });
    </script>
}

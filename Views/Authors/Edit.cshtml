@model BooksArchivingSystem.Business.DTOs.AuthorDto

@{
    ViewData["Title"] = "Edit Author";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                <h4><i class="bi bi-pencil me-2"></i>Edit Author</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">
                            <i class="bi bi-person me-1"></i>Author Name
                        </label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Biography" class="form-label">
                            <i class="bi bi-journal-text me-1"></i>Biography
                        </label>
                        <textarea asp-for="Biography" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Biography" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="BirthDate" class="form-label">
                                    <i class="bi bi-calendar me-1"></i>Birth Date
                                </label>
                                <input asp-for="BirthDate" type="date" class="form-control" />
                                <span asp-validation-for="BirthDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DeathDate" class="form-label">
                                    <i class="bi bi-calendar-x me-1"></i>Death Date (Optional)
                                </label>
                                <input asp-for="DeathDate" type="date" class="form-control" />
                                <span asp-validation-for="DeathDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Nationality" class="form-label">
                            <i class="bi bi-globe me-1"></i>Nationality
                        </label>
                        <input asp-for="Nationality" class="form-control" />
                        <span asp-validation-for="Nationality" class="text-danger"></span>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">
                            <i class="bi bi-arrow-left me-1"></i>Back to List
                        </a>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info me-md-2">
                            <i class="bi bi-eye me-1"></i>Details
                        </a>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-save me-1"></i>Update Author
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

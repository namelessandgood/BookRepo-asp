@model BooksArchivingSystem.Business.DTOs.AuthorDto

@{
    ViewData["Title"] = "Delete Author";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="bi bi-exclamation-triangle me-2"></i>Delete Author
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this author? This action cannot be undone.
                </div>

                <div class="mb-3">
                    <h5>@Model.Name</h5>
                    @if (!string.IsNullOrEmpty(Model.Biography))
                    {
                        <p>@Model.Biography</p>
                    }
                </div>

                <div class="row">
                    @if (Model.BirthDate.HasValue)
                    {
                        <div class="col-md-6">
                            <strong>Birth Date:</strong> @Model.BirthDate.Value.ToString("MMMM dd, yyyy")
                        </div>
                    }
                    @if (Model.DeathDate.HasValue)
                    {
                        <div class="col-md-6">
                            <strong>Death Date:</strong> @Model.DeathDate.Value.ToString("MMMM dd, yyyy")
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Nationality))
                    {
                        <div class="col-md-6 mt-2">
                            <strong>Nationality:</strong> @Model.Nationality
                        </div>
                    }
                </div>
            </div>
            <div class="card-footer">
                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Back to List
                        </a>
                        <div>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info me-2">
                                <i class="bi bi-eye me-1"></i>Details
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Delete Author
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
